@model List<ResultServiceDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<table class="table table-bordered text-center">
    <tr>
        <th>#</th>
        <th>Hizmet Başlığı</th>


    </tr>



    @foreach (var item in Model)
    {



        <tr>
            <td>@item.ServiceID </td>
            <td>@item.Title</td>
            <td>    <a href="/Service/DeleteService/@item.ServiceID" class="btn mb-1 btn-flat btn-outline-danger ">Sil</a></td>
            <td>   <a href="/Service/UpdateService/@item.ServiceID" class="btn mb-1 btn-flat btn-outline-success ">Güncelle</a></td>

        </tr>

    }

</table>
<br />
<a href="/Service/AddService/" class="btn mb-1 btn-flat btn-success text-white btn-lg ">Yeni Hizmet Girişi</a>




