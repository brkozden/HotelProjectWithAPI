@model List<HotelProject.EntityLayer.Concrete.AppRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    var count = 0;
}

<table class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>Rol Adı</th>
            <th>Güncelle</th>
            <th>Sil</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

            count++;
            <tr>
                <th>@count</th>
                <td>@item.Name</td>
                <td><a href="/Role/UpdateRole/@item.Id" class="btn btn-outline-primary">Güncelle</a></td>
                <td><a href="/Role/DeleteRole/@item.Id" class="btn btn-outline-danger">Sil</a></td>
          

            </tr>
        }
    </tbody>
</table>
<a href="/Role/AddRole" class="btn btn-primary">Yeni Rol Ekle</a>