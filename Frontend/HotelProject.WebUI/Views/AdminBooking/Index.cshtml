@model List<ResultBookingDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    int count = 0;
}




<div class="card-title">
    <h2>Rezervasyonlar</h2>
</div>
<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Misafir</th>
                <th>Giriş Tarihi</th>
                <th>Çıkış Tarihi</th>
                <th>Durum</th>
                <th>Onayla</th>
                <th>İptal Et</th>
                <th>Beklet</th>
                <th>Güncelle</th>
              
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
               
                count++;
                <tr>
                    <th>@count</th>
                    <td>@item.Name</td>
                    <td>@item.CheckIn.ToShortDateString()</td>
                    <td>@item.CheckOut.ToShortDateString()</td>
                    @if (item.Status == false)
                    {
                        <td>
                            <span class="badge badge-primary px-2">Onay Bekliyor</span>
                        </td>
                    } @if (item.Status == true)
                    {
                        <td>
                            <span class="badge badge-primary px-2">Onaylandı</span>
                        </td>
                    }

                    <td><a href="/AdminBooking/ApprovedReservation/@item.BookingId" class="btn btn-outline-primary">Onayla</a></td>
                    <td><a href="/AdminBooking/ApprovedReservation/@item.BookingId" class="btn btn-outline-danger">İptal Et</a></td>
                    <td><a href="/AdminBooking/ApprovedReservation/@item.BookingId" class="btn btn-outline-warning">Beklet</a></td>
                    <td><a href="/AdminBooking/UpdateBooking/@item.BookingId" class="btn btn-outline-info">Güncelle</a></td>
                    
                </tr>
            }
        </tbody>
    </table>
</div>

