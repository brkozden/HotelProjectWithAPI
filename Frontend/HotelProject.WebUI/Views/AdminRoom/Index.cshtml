@model List<ResultRoomDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    int count = 0;
}
<table class="table table-bordered text-center">
    <tr>
        <th>#</th>
        <th>Oda Numarası</th>
        <th>Başlık</th>
        <th>Sil</th>
        <th>Güncelle</th>


    </tr>

    @foreach (var item in Model)
    {

        count++;
        <tr>
            <td>@count</td>
            <td>@item.RoomNumber</td>
            <td>@item.Title</td>
            <td>    <a href="/AdminRoom/DeleteRoom/@item.RoomID" class="btn mb-1 btn-flat btn-outline-danger ">Sil</a></td>
            <td>   <a href="/AdminRoom/UpdateRoom/@item.RoomID" class="btn mb-1 btn-flat btn-outline-success ">Güncelle</a></td>
            
        </tr>

    }

</table>
<br />
<a href="/AdminRoom/AddRoom/" class="btn mb-1 btn-flat btn-success text-white btn-lg ">Oda Ekle</a>
