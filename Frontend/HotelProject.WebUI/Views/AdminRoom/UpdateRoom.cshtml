@model UpdateRoomDto
@{
    ViewData["Title"] = "UpdateRoom";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";


}
<form method="post" >
    <input type="hidden" asp-for="RoomID"/>
    <div class="form-group">
        <label>Oda Numarası</label>
        <input type="number" asp-for="RoomNumber" class="form-control" />
    </div>
    <div class="form-group">
        <label>Oda Başlığı</label>
        <input type="text" asp-for="Title" class="form-control" />
    </div>
    <div class="form-group">
        <label>Fiyat</label>
        <input type="number" asp-for="Price" class="form-control" />
    </div>
    <div class="form-group">
        <label>Yatak Sayısı</label>
        <input type="number" asp-for="BedCount" class="form-control" />
    </div>
    <div class="form-group">
        <label>Banyo Sayısı</label>
        <input type="number" asp-for="BathCount" class="form-control" />
    </div>

    <div class="form-group">
        <label>Açıklama</label>
        <input type="text" asp-for="Description" class="form-control" />
    </div>
    <div class="form-group">
        <label>Wifi</label>
        <input type="text" asp-for="Wifi" class="form-control" />
    </div>
    <div class="form-group">
        <label>Oda Görseli</label>
        <input type="text" asp-for="RoomCoverImage" class="form-control" />
    </div>

    <br />
    <button class="btn btn-primary">Oda Güncelle</button>
</form>

