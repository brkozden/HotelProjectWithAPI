@model CreateSendMessage
@{
    ViewData["Title"] = "AddSendMessage";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";

}


<div class="email-left-box">
    <a href="/AdminContact/AddSendMessage" class="btn btn-primary btn-block">Yeni Mesaj Oluştur</a>
    <div class="mail-list mt-4">
        <a href="/AdminContact/Inbox" class="list-group-item border-0 text-primary p-r-0"><i class="fa fa-inbox font-18 align-middle mr-2"></i> <b>Gelen Kutusu</b> <span class="badge badge-primary badge-sm float-right m-t-5">@ViewBag.getContactCount</span> </a>
        <a href="/AdminContact/Sendbox" class="list-group-item border-0 p-r-0"><i class="fa fa-paper-plane font-18 align-middle mr-2"></i>Gönderilenler <span class="badge badge-danger badge-sm float-right m-t-5">@ViewBag.getSendCount</span></a>


    </div>

    <h5 class="mt-5 m-b-10">Kategoriler</h5>
    @await Html.PartialAsync("SidebarAdminContactCategoryPartial")
</div>
<div class="email-right-box">

    <div class="compose-content mt-5">
        <form method="post">
            <div class="form-group">
                <input type="text" class="form-control bg-transparent" asp-for="ReceiverName" placeholder=" Alıcı Adı">
            </div>
            <div class="form-group">
                <input type="email" class="form-control bg-transparent" asp-for="ReceiverMail" placeholder=" Alıcı Mail">
            </div>
            <div class="form-group">
                <input type="text" class="form-control bg-transparent" asp-for="Title" placeholder=" Konu">
            </div>
            <div class="form-group">
                <textarea class="textarea_editor form-control bg-light" asp-for="Content" rows="15" placeholder=" Mesajı buraya girin."></textarea>
            </div>


            <div class="text-left m-t-15">
                <button class="btn btn-primary m-b-30 m-t-15 f-s-14 p-l-20 p-r-20 m-r-10" ><i class="fa fa-paper-plane m-r-5"></i> Gönder</button>

            </div>
        </form>
    </div>
</div>
